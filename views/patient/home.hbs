<div class="container">

<div class="page-wrapper mt-4">
    <div class="page-breadcrumb">
        <button class="btn btn-success mb-3 {{getStatusBtnClass status}}">Account Status : {{patient.status}}</button><br>
        <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
                <h4 class="page-title text-dark">Scheduled volunteers for you</h4><br><br>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        {{!-- <div class="col-lg-2">

               <div class="card card-hover card-sm mb-3">
                <div class="box bg-dark text-center">
                  <h1 class="font-light text-white">
                    <i class="bi bi-people"></i>
                  </h1>
                  <h6 class="text-white">Total Duties</h6>
                  <h3 class="text-white"><b>{{duties.duties.length}}</b></h3>
                </div>
              </div>
              </div> --}}
        {{#if pending}}
        <div class="card">
            <div class="card-body">
                <div id="warningMessage" class="alert alert-warning">
                  Please contact admin to verify your patient application.
                    </div>

            </div>
        </div>
        {{else}}
         <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table id="zero_config" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                            <th>No.</th>
                             <th>date</th>
                            <th>Volunteer Name</th>
                            <th>Volunteer Gender</th>
                            <th>Volunteer Email</th>
                            <th>Volunteer Type</th>
                            </tr>
                        </thead>
                        <tbody>
                        {{#each duties}}
                            <tr>
                            <td>{{incremented @index}}</td>
                             <td>{{this.date}}</td>
                            <td>{{this.name}}</td>
                            <td>{{this.gender}}</td>
                            <td>{{this.email}}</td>
                            <td>{{this.type}}</td>
                            
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        {{/if}}
       

    </div>
</div>
</div>