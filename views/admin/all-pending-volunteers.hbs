<section>
    <div class="container mt-5">
        <div class="row">
            
            <div class="table-responsive-md mt-2">
                <table class="table responsive">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">No.</th>
                             <th scope="col">joining Date</th>
                            <th scope="col">Id</th>
                            <th scope="col">Name</th>
                            <th scope="col">Type</th>
                            <th scope="col">status</th>
                            <th scope="col">Action</th>
                            <th scope="col">No.Duties</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each volunteer}}
                        <tr class="align-middle">
                            <th scope="row">{{incremented @index}}</th>
                            <td>{{this.joining_date}}</td>
                            <td>{{this.v_id}}</td>
                            <td>{{this.name}}</td>
                            <td>{{this.type}}</td>
                            <td>{{this.status}}</td>
                            <td><a href="/admin/approval/{{this.v_id}}" class="no-underline"> 
                                Approval
                                </a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>